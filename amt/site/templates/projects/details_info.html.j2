{% extends 'projects/details_base.html.j2' %}
{% block detail_content %}
    <div class="rvo-table--responsive rvo-alert--padding-md">
        <table class="rvo-table">
            <tbody class="rvo-table-body">
                <tr class="rvo-table-row">
                    <td class="rvo-table-cell">{% trans %}Description{% endtrans %}</td>
                    <td class="rvo-table-cell">{{ system_card.description }}</td>
                </tr>
                <tr class="rvo-table-row">
                    <td class="rvo-table-cell">{% trans %}Repository{% endtrans %}</td>
                    <td class="rvo-table-cell">
                        <a href={{ system_card.provenance.uri }}>{{ system_card.provenance.uri }}</a>
                    </td>
                </tr>
                <tr class="rvo-table-row rvo-max-width-layout--sm">
                    <td class="rvo-table-cell">{% trans %}Algorithm system code{% endtrans %}</td>
                    <td class="rvo-table-cell">NL-AI-VALIDATIE-383672821-PI234</td>
                </tr>
                <tr class="rvo-table-row">
                    <td class="rvo-table-cell">{% trans %}Lifecyle{% endtrans %}</td>
                    <td class="rvo-table-cell">
                        <div target="_self"
                             class="rvo-tag rvo-tag--with-icon rvo-tag--active rvo-tag--success">
                            <span class="utrecht-icon rvo-icon rvo-icon-bevestiging rvo-icon--lg"
                                  role="img"></span>
                            {{ lifecycle.name }}
                        </div>
                    </td>
                </tr>
                <tr class="rvo-table-row">
                    <td class="rvo-table-cell">{% trans %}Last updated{% endtrans %}</td>
                    <td class="rvo-table-cell">{{ last_edited|format_datetime(language) }}</td>
                </tr>
                <tr class="rvo-table-row">
                    <td class="rvo-table-cell">{% trans %}Labels{% endtrans %}</td>
                    <td class="rvo-table-cell">
                        {% for label in system_card.labels %}
                            <a class="rvo-tag rvo-tag--active rvo-tag--default rvo-tag--info">{{ label.name }}</a>
                        {% endfor %}
                    </td>
                </tr>
                <tr class="rvo-table-row">
                    <td class="rvo-table-cell">{% trans %}References{% endtrans %}</td>
                    <td class="rvo-table-cell">
                        {% for reference in system_card.references %}
                            <a href={{ reference.link }}>{{ reference.name }}</a>
                            {% if not loop.last %}<br \>{% endif %}
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
