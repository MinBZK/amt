{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "amt - fastapi",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "justMyCode": false,
      "args": [
        "--log-level",
        "warning",
        "--reload",
        "--port",
        "8000",
        "amt.server:app"
      ],
      "cwd": "${workspaceFolder}/",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "DEBUG": "True",
        "AUTO_CREATE_SCHEMA": "True",
        "ENVIRONMENT": "demo",
        "LOGGING_LEVEL": "DEBUG"
      }
    },
    {
      "name": "Project: tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "args": []
    }
  ]
}
